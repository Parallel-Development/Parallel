{
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "expect": true
  },
  "rules": {
    "strict": 0,
    "no-underscore-dangle": 0,
    "no-mixed-requires": 0,

    // Warnings
    "no-debugger": 1,
    "no-empty": 1,
    "no-invalid-regexp": 1,
    "no-warning-comments": 1,
    "no-unused-expressions": 1,
    "no-native-reassign": 1,
    "no-fallthrough": 1,
    "handle-callback-err": 1,
    "camelcase": 1,

    // Errors
    "no-undef": 2,
    "no-dupe-keys": 2,
    "no-empty-character-class": 2,
    "no-self-compare": 2,
    "valid-typeof": 2,
    "no-unused-vars": 2,
    "no-shadow-restricted-names": 2,
    "radix": 2,
    "no-new-require": 2,
    "no-mixed-spaces-and-tabs": 2,

    // stylistic errors
    "new-cap": 2,
    "no-spaced-func": 2,
    "semi-spacing": 2,
    "space-unary-ops": 2,
    "quotes": [2, "single"]
  }
}
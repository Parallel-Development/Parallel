{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
